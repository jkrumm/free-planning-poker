{
  "name": "free-planning-poker",
  "url": "https://free-planning-poker.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkrumm/free-planning-poker"
  },
  "author": "Johannes Krumm",
  "description": "Estimate your story points faster and easier with this free agile scrum sprint planning poker app. Open source and privacy focused.",
  "homepage": "https://free-planning-poker.com/",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "lint": "next lint",
    "format": "prettier --write \"{src,test}/**\"",
    "format:check": "prettier --check \"{src,test}/**\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre": "npm run lint && npm run type-check && npm run format:check && knip && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@mantine/core": "^7.4.2",
    "@mantine/form": "^7.8.0",
    "@mantine/hooks": "^7.4.2",
    "@mantine/next": "^6.0.21",
    "@mantine/notifications": "^7.8.0",
    "@planetscale/database": "^1.16.0",
    "@sentry/nextjs": "^7.111.0",
    "@t3-oss/env-nextjs": "^0.9.2",
    "@tabler/icons-react": "^3.2.0",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "@upstash/ratelimit": "^1.1.2",
    "@upstash/redis": "^1.30.0",
    "ably": "^1.2.50",
    "ag-charts-react": "^9.2.1",
    "country-region-data": "^3.0.0",
    "drizzle-orm": "^0.30.8",
    "framer-motion": "^11.1.7",
    "geist": "^1.3.0",
    "nanoid": "^5.0.7",
    "next": "^13.5.6",
    "next-axiom": "^1.1.1",
    "nodemailer": "^6.9.13",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.8.2",
    "react-markdown": "^9.0.1",
    "superjson": "^2.2.1",
    "zod": "^3.22.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.2",
    "husky": "^9.0.11",
    "knip": "^5.9.4",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "release-it": "^17.2.0",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "ct3aMetadata": {
    "initVersion": "7.18.1-beta.e1ce1f5"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "git pull",
      "after:release": [
        "git pull",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styling"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "perf",
              "section": "Performance"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "chore",
              "section": "Other Changes"
            },
            {
              "type": "wip",
              "hidden": true
            }
          ]
        }
      }
    }
  }
}
