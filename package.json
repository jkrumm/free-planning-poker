{
  "name": "free-planning-poker",
  "url": "https://free-planning-poker.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkrumm/free-planning-poker"
  },
  "author": "Johannes Krumm",
  "description": "Estimate your story points faster and easier with this free agile scrum sprint planning poker app. Open source and privacy focused.",
  "homepage": "https://free-planning-poker.com/",
  "version": "2.2.6",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "lint": "next lint",
    "format": "prettier --write \"{src,test}/**\"",
    "format:check": "prettier --check \"{src,test}/**\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre": "npm run lint && npm run type-check && npm run format:check && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@ably-labs/react-hooks": "^2.1.2",
    "@emotion/react": "^11.11.3",
    "@emotion/server": "^11.10.0",
    "@libsql/client": "^0.3.1",
    "@mantine/core": "^7.4.2",
    "@mantine/form": "^7.4.2",
    "@mantine/hooks": "^7.4.2",
    "@mantine/modals": "^7.4.2",
    "@mantine/next": "^6.0.21",
    "@mantine/notifications": "^7.4.2",
    "@planetscale/database": "^1.14.0",
    "@sentry/nextjs": "^7.93.0",
    "@t3-oss/env-nextjs": "^0.7.3",
    "@tabler/icons-react": "^2.46.0",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "@upstash/ratelimit": "^1.0.0",
    "@upstash/redis": "^1.28.1",
    "ably": "^1.2.48",
    "apexcharts": "^3.45.1",
    "country-region-data": "^3.0.0",
    "drizzle-orm": "^0.29.3",
    "framer-motion": "^10.18.0",
    "geist": "^1.2.1",
    "luxon": "^3.4.4",
    "nanoid": "^5.0.4",
    "next": "^13.4.13",
    "next-axiom": "^1.1.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "normalize.css": "^8.0.1",
    "random-words": "^2.0.0",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.3",
    "react-markdown": "^9.0.0",
    "short-uuid": "^4.2.2",
    "superjson": "^2.2.1",
    "zod": "^3.21.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@release-it/conventional-changelog": "^8.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.2",
    "@types/luxon": "^3.4.1",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/random-words": "^1.2.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "dotenv": "^16.1.4",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "release-it": "^17.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "undici": "^5.28.2"
  },
  "ct3aMetadata": {
    "initVersion": "7.18.1-beta.e1ce1f5"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "git pull",
      "after:release": [
        "git pull",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styling"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "perf",
              "section": "Performance"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "chore",
              "section": "Other Changes"
            },
            {
              "type": "wip",
              "hidden": true
            }
          ]
        }
      }
    }
  }
}
