{
  "name": "free-planning-poker",
  "url": "https://free-planning-poker.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkrumm/free-planning-poker"
  },
  "engines": {
    "node": "22.x"
  },
  "author": "Johannes Krumm",
  "description": "Estimate your story points faster and easier with this free agile scrum sprint planning poker app. Open source and privacy focused.",
  "homepage": "https://free-planning-poker.com/",
  "version": "8.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev -p 3001",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"{src,test}/**\"",
    "format:check": "prettier --check \"{src,test}/**\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "pre": "npm run lint && npm run type-check && npm run format:check && knip && npm run build",
    "release": "release-it",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio",
    "db:check": "npx drizzle-kit check"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/jetbrains-mono": "^5.2.6",
    "@fontsource/manrope": "^5.2.6",
    "@mantine/core": "^8.1.3",
    "@mantine/form": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@mantine/next": "^6.0.22",
    "@mantine/notifications": "^8.1.3",
    "@sentry/nextjs": "^9.39.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tabler/icons-react": "^3.34.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.84.1",
    "@trpc/client": "^11.4.3",
    "@trpc/next": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.1",
    "ag-charts-react": "^12.0.2",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "country-region-data": "^3.1.0",
    "drizzle-orm": "^0.44.3",
    "framer-motion": "^12.23.6",
    "motion": "^12.23.6",
    "mysql2": "^3.14.2",
    "nanoid": "^5.1.5",
    "next": "^14.2.30",
    "normalize.css": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^10.1.0",
    "react-use-websocket": "^4.13.0",
    "sass": "^1.89.2",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/canvas-confetti": "^1.9.0",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.16.4",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.30",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "release-it": "^19.0.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "ct3aMetadata": {
    "initVersion": "7.30.2"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "git pull",
      "after:release": [
        "git pull",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styling"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "perf",
              "section": "Performance"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "chore",
              "section": "Other Changes"
            },
            {
              "type": "wip",
              "hidden": true
            }
          ]
        }
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
