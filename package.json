{
  "name": "free-planning-poker",
  "url": "https://free-planning-poker.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkrumm/free-planning-poker"
  },
  "engines": {
    "node": "20.11.1"
  },
  "author": "Johannes Krumm",
  "description": "Estimate your story points faster and easier with this free agile scrum sprint planning poker app. Open source and privacy focused.",
  "homepage": "https://free-planning-poker.com/",
  "version": "6.3.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev -p 3001",
    "start": "next start",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "lint": "next lint",
    "format": "prettier --write \"{src,test}/**\"",
    "format:check": "prettier --check \"{src,test}/**\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre": "npm run lint && npm run type-check && npm run format:check && knip && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@fontsource/inter": "^5.1.1",
    "@fontsource/jetbrains-mono": "^5.1.2",
    "@fontsource/manrope": "^5.1.1",
    "@mantine/core": "^7.15.3",
    "@mantine/form": "^7.15.3",
    "@mantine/hooks": "^7.15.3",
    "@mantine/next": "^6.0.22",
    "@mantine/notifications": "^7.15.3",
    "@sentry/nextjs": "^8.54.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tabler/icons-react": "^3.28.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.64.1",
    "@trpc/client": "next",
    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.3",
    "ag-charts-react": "^11.0.3",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "country-region-data": "^3.1.0",
    "drizzle-orm": "^0.38.3",
    "framer-motion": "^11.17.0",
    "motion": "^12.0.6",
    "mysql2": "^3.12.0",
    "nanoid": "^5.0.9",
    "next": "^14.2.23",
    "normalize.css": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.14.1",
    "react-markdown": "^9.0.3",
    "react-use-websocket": "^4.11.1",
    "sass": "^1.83.4",
    "superjson": "^2.2.2",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1",
    "zustand": "^4.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.20.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.13",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.7",
    "knip": "^5.42.0",
    "postcss": "^8.5.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "release-it": "^17.11.0",
    "tailwind-scrollbar-hide": "^1.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  },
  "ct3aMetadata": {
    "initVersion": "7.30.2"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "git pull",
      "after:release": [
        "git pull",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styling"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "perf",
              "section": "Performance"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "chore",
              "section": "Other Changes"
            },
            {
              "type": "wip",
              "hidden": true
            }
          ]
        }
      }
    }
  }
}
