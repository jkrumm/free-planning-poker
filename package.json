{
  "name": "free-planning-poker",
  "url": "https://free-planning-poker.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkrumm/free-planning-poker"
  },
  "engines": {
    "node": "20.x"
  },
  "author": "Johannes Krumm",
  "description": "Estimate your story points faster and easier with this free agile scrum sprint planning poker app. Open source and privacy focused.",
  "homepage": "https://free-planning-poker.com/",
  "version": "6.2.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev -p 3001",
    "start": "next start",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "lint": "next lint",
    "format": "prettier --write \"{src,test}/**\"",
    "format:check": "prettier --check \"{src,test}/**\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre": "npm run lint && npm run type-check && npm run format:check && knip && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@mantine/core": "^7.13.1",
    "@mantine/form": "^7.13.1",
    "@mantine/hooks": "^7.13.1",
    "@mantine/next": "^6.0.22",
    "@mantine/notifications": "^7.13.1",
    "@sentry/nextjs": "^8.33.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tabler/icons-react": "^3.19.0",
    "@tanstack/react-query": "^5.59.16",
    "@trpc/client": "next",
    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "@upstash/ratelimit": "^2.0.3",
    "@upstash/redis": "^1.34.0",
    "ag-charts-react": "^10.2.0",
    "country-region-data": "^3.0.0",
    "drizzle-orm": "^0.30.10",
    "framer-motion": "^11.9.0",
    "geist": "^1.3.1",
    "mysql2": "^3.11.0",
    "nanoid": "^5.0.7",
    "next": "^14.2.14",
    "normalize.css": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.13.1",
    "react-markdown": "^9.0.1",
    "react-use-websocket": "^4.8.1",
    "superjson": "^2.2.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.13",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.6",
    "knip": "^5.31.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "release-it": "^17.6.0",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2"
  },
  "ct3aMetadata": {
    "initVersion": "7.30.2"
  },
  "release-it": {
    "git": {
      "requireBranch": "master",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "git pull",
      "after:release": [
        "git pull",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styling"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "perf",
              "section": "Performance"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "chore",
              "section": "Other Changes"
            },
            {
              "type": "wip",
              "hidden": true
            }
          ]
        }
      }
    }
  }
}
